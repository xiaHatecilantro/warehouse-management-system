<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.convenience.store.controller.InventoryDialogController">
    <children>
        <Label text="库存信息" VBox.vgrow="NEVER">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <GridPane alignment="CENTER" hgap="10.0" vgap="10.0" VBox.vgrow="NEVER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="40.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="40.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="40.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="40.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="商品ID:" textAlignment="RIGHT" GridPane.halignment="RIGHT" GridPane.valignment="CENTER" />
                <TextField fx:id="productIdField" GridPane.columnIndex="1" GridPane.valignment="CENTER" />
                <Label text="仓库ID:" textAlignment="RIGHT" GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                <TextField fx:id="warehouseIdField" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                <Label text="数量:" textAlignment="RIGHT" GridPane.halignment="RIGHT" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                <TextField fx:id="quantityField" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                <Label text="最小库存:" textAlignment="RIGHT" GridPane.halignment="RIGHT" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                <TextField fx:id="minStockField" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
            </children>
        </GridPane>
        <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="NEVER">
            <children>
                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveInventory" text="保存">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancel" text="取消">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>