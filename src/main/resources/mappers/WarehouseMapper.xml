<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.convenience.store.dao.WarehouseDao">
    <resultMap id="WarehouseResultMap" type="com.convenience.store.entity.Warehouse">
        <id property="warehouseId" column="warehouse_id" />
        <result property="warehouseName" column="warehouse_name" />
        <result property="location" column="location" />
        <result property="capacity" column="capacity" />
        <result property="managerId" column="manager_id" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
        <association property="manager" javaType="com.convenience.store.entity.User" resultMap="com.convenience.store.dao.UserDao.UserResultMap" />
    </resultMap>

    <select id="getWarehouseById" parameterType="int" resultMap="WarehouseResultMap">
        SELECT w.*, u.*
        FROM warehouses w
        LEFT JOIN users u ON w.manager_id = u.user_id
        WHERE w.warehouse_id = #{warehouseId}
    </select>

    <select id="getAllWarehouses" resultMap="WarehouseResultMap">
        SELECT w.*, u.*
        FROM warehouses w
        LEFT JOIN users u ON w.manager_id = u.user_id
    </select>

    <insert id="insertWarehouse" parameterType="com.convenience.store.entity.Warehouse" useGeneratedKeys="true" keyProperty="warehouseId">
        INSERT INTO warehouses (warehouse_name, location, capacity, manager_id)
        VALUES (#{warehouseName}, #{location}, #{capacity}, #{managerId})
    </insert>

    <update id="updateWarehouse" parameterType="com.convenience.store.entity.Warehouse">
        UPDATE warehouses
        SET warehouse_name = #{warehouseName}, location = #{location}, capacity = #{capacity}, manager_id = #{managerId}
        WHERE warehouse_id = #{warehouseId}
    </update>

    <delete id="deleteWarehouse" parameterType="int">
        DELETE FROM warehouses WHERE warehouse_id = #{warehouseId}
    </delete>
</mapper>