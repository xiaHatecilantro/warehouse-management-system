<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.convenience.store.dao.SupplierDao">
    <resultMap id="SupplierResultMap" type="com.convenience.store.entity.Supplier">
        <id property="supplierId" column="supplier_id" />
        <result property="supplierName" column="supplier_name" />
        <result property="contactPerson" column="contact_person" />
        <result property="phone" column="phone" />
        <result property="email" column="email" />
        <result property="address" column="address" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <select id="getSupplierById" parameterType="int" resultMap="SupplierResultMap">
        SELECT * FROM suppliers WHERE supplier_id = #{supplierId}
    </select>

    <select id="getAllSuppliers" resultMap="SupplierResultMap">
        SELECT * FROM suppliers
    </select>

    <insert id="insertSupplier" parameterType="com.convenience.store.entity.Supplier" useGeneratedKeys="true" keyProperty="supplierId">
        INSERT INTO suppliers (supplier_name, contact_person, phone, email, address)
        VALUES (#{supplierName}, #{contactPerson}, #{phone}, #{email}, #{address})
    </insert>

    <update id="updateSupplier" parameterType="com.convenience.store.entity.Supplier">
        UPDATE suppliers
        SET supplier_name = #{supplierName}, contact_person = #{contactPerson}, phone = #{phone}, 
            email = #{email}, address = #{address}
        WHERE supplier_id = #{supplierId}
    </update>

    <delete id="deleteSupplier" parameterType="int">
        DELETE FROM suppliers WHERE supplier_id = #{supplierId}
    </delete>
</mapper>